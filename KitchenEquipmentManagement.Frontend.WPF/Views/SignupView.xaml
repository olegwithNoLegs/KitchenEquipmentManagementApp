<Window x:Class="KitchenEquipmentManagement.Frontend.WPF.Views.SignupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KitchenEquipmentManagement.Frontend.WPF.Converters"
        xmlns:helpers="clr-namespace:KitchenEquipmentManagement.Frontend.WPF.Helpers"
        mc:Ignorable="d"
        Title="Sign up" Height="450" Width="400" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- First Name -->
        <Grid Margin="0 0 0 10">
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
            <TextBlock Text="First Name"
                       Foreground="Gray"
                       IsHitTestVisible="False"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Visibility="{Binding FirstName, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
        </Grid>

        <!-- Last Name -->
        <Grid Grid.Row="1" Margin="0 0 0 10">
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
            <TextBlock Text="Last Name"
                       Foreground="Gray"
                       IsHitTestVisible="False"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Visibility="{Binding LastName, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
        </Grid>

        <!-- Email Address -->
        <Grid Grid.Row="2" Margin="0 0 0 10">
            <TextBox Text="{Binding EmailAddress, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
            <TextBlock Text="Email Address"
                       Foreground="Gray"
                       IsHitTestVisible="False"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Visibility="{Binding EmailAddress, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
        </Grid>

        <!-- Username -->
        <Grid Grid.Row="3" Margin="0 0 0 10">
            <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
            <TextBlock Text="Username"
                       Foreground="Gray"
                       IsHitTestVisible="False"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Visibility="{Binding UserName, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
        </Grid>

        <!-- Password -->
        <Grid Grid.Row="4" Margin="0 0 0 10">
            <PasswordBox
                helpers:PasswordBoxHelper.BindPassword="True"
                helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Padding="5"/>
            <TextBlock Text="Password"
                       Foreground="Gray"
                       IsHitTestVisible="False"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Visibility="{Binding Password, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
        </Grid>

        <!-- User Type Toggle -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <RadioButton Content="Admin"
                         GroupName="UserType"
                         IsChecked="{Binding IsAdmin, Mode=TwoWay}"
                         Margin="10,0"/>
            <RadioButton Content="SuperAdmin"
                         GroupName="UserType"
                         IsChecked="{Binding IsSuperAdmin, Mode=TwoWay}"
                         Margin="10,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Signup" Command="{Binding RegisterCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
